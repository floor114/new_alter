-#  = javascript_include_tag 'user-forms'
.group-form
  = form_for(model, as: :user, url: user_session_path, html: { role: 'form' }) do |f|
    / TODO: Handle error fields
    = f.email_field :email, autofocus: true, placeholder: t('activerecord.attributes.user.email'), class: true ? 'custom-input' : 'custom-input error'
    = f.password_field :password, autocomplete: 'off', placeholder: t('activerecord.attributes.user.password'), class: true ? 'custom-input' : 'custom-input error'
    .custom-checkbox
      = f.check_box :remember_me
      = f.label :remember_me
    = f.submit t('views.titles.devise.log_in'), class: 'button', data: data_disable_with
  = cell(::Devise::Cell::Links)
