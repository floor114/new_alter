.group-form
  = form_for(model, as: :user, url: user_password_path, html: { method: :post, role: 'form' }) do |f|
    = f.email_field :email, autofocus: true, placeholder: t('activerecord.attributes.user.email'), class: 'custom-input'
    = f.submit t('views.actions.send'), class: 'button', data: data_disable_with
  = cell(::Devise::Cell::Links)
