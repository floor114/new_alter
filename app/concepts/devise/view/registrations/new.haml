.group-form
  = form_for(model, as: :user, url: user_registration_path, html: { role: 'form', class: 'user-form' }) do |f|
    = f.text_field :first_name, autofocus: true, placeholder: t('activerecord.attributes.user.first_name'), class: 'custom-input'
    = f.text_field :last_name, autofocus: true, placeholder: t('activerecord.attributes.user.last_name'), class: 'custom-input'
    = f.email_field :email, autofocus: true, placeholder: t('activerecord.attributes.user.email'), class: 'custom-input'
    = f.password_field :password, placeholder: t('activerecord.attributes.user.password'), class: 'with-error custom-input'
    = f.password_field :password_confirmation, placeholder: t('activerecord.attributes.user.password_confirmation'), class: 'custom-input'
    = f.submit t('views.titles.devise.sign_up'), class: 'button', data: data_disable_with
  = cell(::Devise::Cell::Links)
