.group-modal-form
  = form_for model, url: request_decisions_path(request), remote: true, html: { class: 'item-form' } do |f|
    .modal-body
      = f.text_area :description, class: 'custom-textarea', rows: 7
      = cell(::Decision::Cell::Created::AcceptedItems, f)
    .modal-footer
      .actions
        = f.submit t('views.actions.send'), class: ' btn btn-shadow btn-info confirm', data: data_disable_with
        %button.btn.btn-shadow.btn-default.cancel{ data: { dismiss: 'modal' } }= t('views.actions.cancel')
