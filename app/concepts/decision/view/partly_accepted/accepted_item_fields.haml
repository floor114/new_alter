.row
  .col-md-10.col-md-offset-1
    .nested-fields.form-group
      .row
        .col-md-7
          = f.select :item, select_options, {}, class: 'form-control select2', disabled: true
        .col-md-5
          = f.number_field :helped_count, class: 'form-control goal-field', min: 1, step: 1, max: f.object.count
          = link_to_remove_association f do
            %span.fa.fa-times.remove-link
